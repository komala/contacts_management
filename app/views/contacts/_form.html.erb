<%= form_for @contact do |f| %>          
    <div class="panel-body">
      <% if @contact.errors.any? %>
        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-danger">
              <h3>Please correct this following errors:</h3>
              <ul>
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <!--  -->

      <div class="form-horizontal">
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <%= f.label :name, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.text_field :name, class: "form-control" %>                
              </div>
            </div>

            <div class="form-group">
              <%= f.label :company, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.text_field :company, class: "form-control" %>                
              </div>              
            </div>

            <div class="form-group">
              <%= f.label :email, class: "control-label col-md-3" %>               
              <div class="col-md-8">
                <%= f.text_field :email, class: "form-control" %>                
              </div>              
            </div>

            <div class="container"></div>

              <div id="exTab2" class="container"> 
              <ul class="nav nav-tabs">
                     <li class="active">
                      <a  href="#1" data-toggle="tab">Address(s)</a>
                    </li>
                    <li><a href="#2" data-toggle="tab">Communication Details</a>
                    </li>
                  </ul><hr>
                  <div class="tab-content ">
                      <div class="tab-pane active" id="1">
                        <%= f.label :address, class: "control-label col-md-3" %>               
                        <div class="col-md-4">
                          <%= f.text_area :address, class: "form-control" %>                                         
                      </div>
                      </div>
                      <div class="tab-pane" id="2">
                        <%= f.label :phone, class: "control-label col-md-3" %>               
                        <div class="col-md-4">
                          <%= f.text_field :phone, class: "form-control" %>                
                                
                      </div>
                      </div>
                    </div>
                </div>
                </div>
                </div></div>

<hr></hr>



            <div class="form-group" id="add-new-group" style="display: none;">
              <div class="col-md-offset-3 col-md-8">
                <div class="input-group">
                  <input type="text" name="new_group" id="new_group" class="form-control">
                  <span class="input-group-btn">
                    <a href="#" class="btn btn-default">
                      <i class="glyphicon glyphicon-ok"></i>
                    </a>
                  </span>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <button type="submit" class="btn btn-primary">Save</button>

              <%= link_to "Cancel", contacts_path, class: "btn btn-default" %>              
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!--  -->


<hr></hr>
